{{> header}}

{{#if teacher}}
	<main class="engine">
		<div class="main_cover"></div>
		<div class="engine__container">

			<div class="creatingClass">
				<div class="creatingClass__form">
					<form action="/inicio" method="post" name="newClass" id="newClass">
						<div class="labelForm">
                            <span>Crea una clase</span>
                        </div>
						<div class="input_field">
							<input type="text" name="nameClass" id="nameClass" spellcheck="false" required minlength="4">
							<label class="field__label">Nombre de la clase</label>
							<span class="field__placeholder">Nombre de la clase</span>
						</div>
						<div class="input_field">
							<input type="number" name="sectionClass" id="sectionClass" spellcheck="false" required min="1" max="3" maxlength="2">
							<label class="field__label">Sección</label>
							<span class="field__placeholder">Sección</span>
						</div>
						<div class="input_field">
							<input type="number" name="testsClass" id="testsClass" spellcheck="false" required min="1" max="10" maxlength="2">
							<label class="field__label">Número de evaluaciones</label>
							<span class="field__placeholder">Número de evaluaciones</span>
						</div>
						<div class="select_field">
							<input type="hidden" name="colorClass" id="colorClass" required>
							<div class="select__input--container">
								<div class="element" style="background-color: #e11900;"></div>
								<div class="element" style="background-color: #ff3e82;"></div>
								<div class="element" style="background-color: #ff3ee4;"></div>
								<div class="element" style="background-color: #7e00bf;"></div>
								<div class="element" style="background-color: #443eff;"></div>
								<div class="element" style="background-color: #027aff;"></div>
								<div class="element" style="background-color: #0eb1c5;"></div>
								<div class="element" style="background-color: #24ee71;"></div>
								<div class="element" style="background-color: #e1d51b;"></div>
								<div class="element" style="background-color: #e18100;"></div>
							</div>
							<label class="field__label">Color</label>
						</div>
						<div class="button">Crear</div>
					</form>
				</div>
			</div>

			<div class="classes">
	
				{{#if classes}}
					{{#each classes}}
						<a id="class{{id}}" class="class" href="class{{id}}">
							<div class="class__details">
								<span class="class__details--title">{{name}}</span>
								<span class="class__details--section">Sección: {{section}}</span>
							</div>
							<div class="class__students" title="Estudiantes">
								<svg class="{{color}}" viewBox="0 0 677.55 650.71">
									<path d="M677.55,0V650.71H0V596.48C0,489.64,59.78,397.21,146.61,353A217.3,217.3,0,0,1,100,218.18C100,97.69,197.62,0,318.13,0Z"></path>
									<path d="M368.83,382.87H267.43a173.32,173.32,0,0,0-173.3,173.3,34.67,34.67,0,0,0,34.66,34.67h378.7a34.6,34.6,0,0,0,34.64-34.67A173.31,173.31,0,0,0,368.83,382.87Zm-50.7-48a128,128,0,1,0-128-128A128,128,0,0,0,318.13,334.87Z"></path>
								</svg>
								<span class="class__students--quantity">{{students}}</span>
							</div>
						</a>
					{{/each}}
				{{/if}}
	
				<div class="createClass">
					<svg viewBox="0 0 576 512"><path d="M144.3 32.04C106.9 31.29 63.7 41.44 18.6 61.29c-11.42 5.026-18.6 16.67-18.6 29.15l0 357.6c0 11.55 11.99 19.55 22.45 14.65c126.3-59.14 219.8 11 223.8 14.01C249.1 478.9 252.5 480 256 480c12.4 0 16-11.38 16-15.98V80.04c0-5.203-2.531-10.08-6.781-13.08C263.3 65.58 216.7 33.35 144.3 32.04zM557.4 61.29c-45.11-19.79-88.48-29.61-125.7-29.26c-72.44 1.312-118.1 33.55-120.9 34.92C306.5 69.96 304 74.83 304 80.04v383.1C304 468.4 307.5 480 320 480c3.484 0 6.938-1.125 9.781-3.328c3.925-3.018 97.44-73.16 223.8-14c10.46 4.896 22.45-3.105 22.45-14.65l.0001-357.6C575.1 77.97 568.8 66.31 557.4 61.29z"/></svg>
					<span>Crear una clase</span>
				</div>
	
			</div>
		</div>
	</main>
{{/if}}

{{#if student}}
